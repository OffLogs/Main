node('master') {
    stage('checkout') {
        checkout scm
        sh 'ls -sh'
        // git credentialsId: 'jenkins-root', url: 'git@gitlab.com:lampego/offlogs.git'
        sh 'docker build --label="offlogs-production-web" --file="devops/publish/Dockerfile" .'
        sh 'ls -sh'
        sh 'docker save -o test.tar offlogs-production-web'
        stash 'publish-stash'
    }
}
node('production') {
    stage('build') {
        unstash 'publish-stash'
        sh 'ls -sh'
    }
}
