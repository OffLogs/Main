@using OffLogs.Web.Shared.Ui.Toast
@using OffLogs.Web.Resources

@inherits LayoutComponentBase

<div class="page" @onclick="OnClickDocument">

    @if (_isShowMainMenu)
    {
        <NavMenu />
    }

    @if (_isInitialized)
    {
        <div class="main">
            <div class="container-fluid">
                @Body
            </div>
            <ToastMessageContainer/>
        </div>
    }
    
    @if (!_isShowReCaptcha)
    {
        <style>
            .grecaptcha-badge { 
                visibility: hidden;
            }
        </style>
    }
</div>
