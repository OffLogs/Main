@using OffLogs.Web.Shared.Ui
@using OffLogs.Web.Constants

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">OffLogs</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@SiteUrl.Dashboard" Match="NavLinkMatch.All">
                <Icon IconType="home"/> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@SiteUrl.DashboardApplications">
                <Icon IconType="settings_applications"/> Application
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@SiteUrl.DashboardLogs">
                <Icon IconType="dns"/> Logs
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}
