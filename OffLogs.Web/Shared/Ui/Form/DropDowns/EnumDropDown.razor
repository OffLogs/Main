@using OffLogs.Business.Common.Constants
@using OffLogs.Business.Common.Extensions

@typeparam TItem where TItem: struct, IConvertible

<RadzenDropDown
    AllowClear="true"
    TValue="TItem"
    Class="w-100"
    AllowFiltering="false"
    AllowVirtualization="false"
    Data="@_list"
    TextProperty="Name"
    ValueProperty="Id"
    Placeholder="@Placeholder"
    Value="@_value"
    ValueChanged="OnItemSelected">

    <Template Context="level">
        <text>@level</text>
    </Template>
</RadzenDropDown>
