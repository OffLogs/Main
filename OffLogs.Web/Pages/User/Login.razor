@page "/login"
@using OffLogs.Business.Common.Models.Api.Request.User
@using OffLogs.Web.Core.Constants
@using OffLogs.Web.Core.Components.Form
@using OffLogs.Web.Shared.Ui
@inject IAuthorizationService _authorizationService
@inject NavigationManager _navigationManager

<h1>Please login</h1>

<EditForm Model="@model" OnValidSubmit="@HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <CustomValidator @ref="_customValidator" />

    <p>
        <CustomInputText Label="Login:" @bind-Value="model.UserName" />
    </p>
    <p>
        <CustomInputText Label="Password:" @bind-Value="model.Password" type="password" />
    </p>
    <MyButton IsSubmit="true">Login</MyButton>
</EditForm>

@code
{
    private LoginRequestModel model = new();
    private CustomValidator _customValidator;
    private EditContext _editContext;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(model);
    }
    
    private async Task HandleSubmit()
    {
        _customValidator.ClearErrors();
        var isValid = _editContext.Validate();
        if (isValid)
        {
            try
            {
                var isLoggedIn = await _authorizationService.LoginAsync(model);
                if (isLoggedIn)
                {
                    _navigationManager.NavigateTo(SiteUrl.Dashboard);
                }
            }
            catch (Exception e)
            {
                _customValidator.DisplayError(nameof(model.UserName), "Login or password is incorrect");
                Console.WriteLine(e.Message);
            }
        }
    }
}
