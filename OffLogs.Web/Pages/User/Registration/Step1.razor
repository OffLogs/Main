@page "/registration/step1"
@page "/{locale}/registration/step1"

@using Microsoft.AspNetCore.Components
@using OffLogs.Api.Common.Dto.RequestsAndResponses.Public.User
@using OffLogs.Web.Resources

@inherits BaseComponent

<div class="row d-flex px-3 justify-content-center">
    <div class="col-xl-4 p-3">
        <RadzenCard>
            <h2 class="mb-4">@CommonResources.Registration</h2>
            <RadzenTemplateForm TItem="RegistrationStep1Request" Data="@model" Submit="HandleSubmit">
                <DataAnnotationsValidator/>
                <ValidationSummary/>

                <div class="mb-2">
                    <RadzenLabel
                        Text="@AuthResources.Registration_EnterEmail"
                        class="col-sm-3 mb-3"/>
                    <RadzenTextBox @bind-Value="model.Email" Class="w-100 mb-3 col"/>
                </div>
                @if (_isLoading)
                {
                    <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate"/>
                }
                else
                {
                    <RadzenButton
                        ButtonType="ButtonType.Submit"
                        Text="@AuthResources.Registration_SendEmail"/>
                }
            </RadzenTemplateForm>
        </RadzenCard>
    </div>
</div>
