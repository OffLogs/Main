@page "/documentation/{menuItemId?}/{listItemId?}"
@page "/{locale}/documentation/{menuItemId?}/{listItemId?}"

@using OffLogs.Web.Resources
@using OffLogs.Web.Shared.Ui.NavigationLayout

@inherits BaseComponent

<NavigationLayout
    @ref="_navigationLayout"
    MenuTitle="@DocResources.PageTitle"
    MenuItems="@_menuItems"
    ListItems="@_documentsList"
    OnSelectMenuItem="@OnMenuItemSelected"
    OnSelectListItem="@(async (menuEvent) => await OnSelectPageAsync(menuEvent))"
>
    <BodyContent>
        @if (_isLoading)
        {
            <Preloader/>
        }
        else
        {
            <Markdown MarkdownText="@_markdownString"/>
        }
    </BodyContent>
</NavigationLayout>
