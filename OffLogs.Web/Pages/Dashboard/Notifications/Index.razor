@page "/dashboard/notifications"
@page "/{locale}/dashboard/notifications"

@using OffLogs.Web.Shared.Ui.NavigationLayout
@using OffLogs.Web.Resources
@using OffLogs.Web.Pages.Dashboard.Notifications.Modal

@inherits BaseComponent

<NavigationLayout
    MenuTitle="@NotificationResources.PageTitle"
    MenuItems="@_menuItems"
    ListItems="@_listItems"
    OnSelectMenuItem="OnSelectMenuItem"
    OnSelectListItem="OnSelectListItem"
    BodyButtons="@_actionButtons"
    @ref="_navigationLayout"
>
    <BodyContent>
        IsLoading: @_state.Value.IsLoading
        Test body
    </BodyContent>
</NavigationLayout>

@if (_isShowAddRuleModal)
{
    
}
@if (_isShowAddTemplateModal)
{
    <SetTemplateModal
        Id="@_selectedListItemId"
        OnClose="OnCloseModal"
        IsShowAddModal="@_isShowAddTemplateModal"
    />
}
