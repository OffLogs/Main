<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping 
        xmlns="urn:nhibernate-mapping-2.2"
        namespace="OffLogs.Business.Db.Entity" 
        assembly="OffLogs.Business">

    <class name="LogPropertyEntity" table="log_properties">
        <id name="Id">
            <column name="id" sql-type="int" not-null="true"/>
            <generator class="native" />
        </id>

        <many-to-one 
            name="Log" 
            class="LogEntity"
            column="log_id"
            cascade="save-update"
        />
        
        <property name="Key">
            <column name="key" length="200" not-null="true" />
        </property>
        <property name="Value">
            <column name="value" length="2048" not-null="true" />
        </property>
        <property name="CreateTime">
            <column name="create_time" sql-type="datetime" not-null="true" />
        </property>
    </class>

</hibernate-mapping>