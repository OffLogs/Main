<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping 
        xmlns="urn:nhibernate-mapping-2.2"
        namespace="OffLogs.Business.Db.Entity" 
        assembly="OffLogs.Business">

    <class name="UserEntity" table="users">
        <id name="Id">
            <column name="id" sql-type="int" not-null="true"/>
            <generator class="native" />
        </id>
        
        <property name="UserName">
            <column name="user_name" length="200" not-null="true" />
        </property>
        <property name="Email">
            <column name="email" length="200" not-null="true" />
        </property>
        <property name="PasswordHash">
            <column name="password_hash" sql-type="bytea" not-null="true" />
        </property>
        <property name="PasswordSalt">
            <column name="password_salt" sql-type="bytea" not-null="true" />
        </property>
        <property name="CreateTime">
            <column name="create_time" sql-type="datetime" not-null="true" />
        </property>
        <property name="UpdateTime">
            <column name="update_time" sql-type="datetime" not-null="true" />
        </property>
    </class>

</hibernate-mapping>